generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid()) @db.Uuid
  role       Role     @default(MANAGER)
  email      String   @unique
  password   String
  firstName  String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  disabled   Boolean  @default(false)
  deleted    Boolean  @default(false)

  @@map("users")
}

model Department {
  id               String @id @default(uuid())
  name             String @unique
  location         String
  responsableName  String
  responsableEmail String

  equipments Equipment[]
  previousMoves  EquipmentMove[]   @relation("PreviousDepartment")
  newMoves       EquipmentMove[]   @relation("NewDepartment")
}

model Equipment {
  id           String     @id @default(uuid())
  name         String
  ean          String     @unique
  disabled     Boolean    @default(false)
  createdAt    DateTime   @default(now())
  disabledAt   DateTime?
  alocatedAtId String
  alocatedAt   Department @relation(fields: [alocatedAtId], references: [id])

  moves EquipmentMove[]

  components Component[]
}

model EquipmentMove {
  id                         String     @id @default(uuid())
  equipmentId                String
  previouslyAlocatedAtId     String
  newlyAlocatedAtId          String
  createdAt                  DateTime   @default(now())

  equipment                  Equipment  @relation(fields: [equipmentId], references: [id])
  previouslyAlocatedAt       Department @relation("PreviousDepartment", fields: [previouslyAlocatedAtId], references: [id])
  newlyAlocatedAt            Department @relation("NewDepartment", fields: [newlyAlocatedAtId], references: [id])
}

model Component {
  id            String   @id @default(uuid())
  equipmentId   String
  name          String
  status        ComponentStatus @default(OK)
  createdAt     DateTime @default(now())
  discardedAt   DateTime? 
  equipment     Equipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)
}

enum ComponentStatus {
  OK
  EM_MANUTENCAO
}

enum Role {
  MANAGER
  ADMIN
}
