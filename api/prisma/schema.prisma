generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid()) @db.Uuid
  role       Role     @default(MANAGER)
  email      String   @unique
  password   String
  firstName  String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  disabled   Boolean  @default(false)
  deleted    Boolean  @default(false)

  @@map("users")
}

model Department {
  id               String @id @default(uuid())
  name             String @unique
  location         String
  responsableName  String
  responsableEmail String

  equipments    Equipment[]
  previousMoves EquipmentMove[] @relation("PreviousDepartment")
  newMoves      EquipmentMove[] @relation("NewDepartment")
}

model Equipment {
  id           String     @id @default(uuid())
  name         String
  ean          String     @unique
  disabled     Boolean    @default(false)
  createdAt    DateTime   @default(now())
  disabledAt   DateTime?
  alocatedAtId String
  alocatedAt   Department @relation(fields: [alocatedAtId], references: [id])

  moves EquipmentMove[]

  components Component[]

  maintenances Maintenance[]
}

model EquipmentMove {
  id                     String   @id @default(uuid())
  equipmentId            String
  previouslyAlocatedAtId String
  newlyAlocatedAtId      String
  createdAt              DateTime @default(now())

  equipment            Equipment  @relation(fields: [equipmentId], references: [id])
  previouslyAlocatedAt Department @relation("PreviousDepartment", fields: [previouslyAlocatedAtId], references: [id])
  newlyAlocatedAt      Department @relation("NewDepartment", fields: [newlyAlocatedAtId], references: [id])
}

model Component {
  id          String          @id @default(uuid())
  equipmentId String
  name        String
  status      ComponentStatus @default(OK)
  createdAt   DateTime        @default(now())
  discardedAt DateTime?
  equipment   Equipment       @relation(fields: [equipmentId], references: [id], onDelete: Cascade)

  maintenances MaintenanceComponent[]
}

enum ComponentStatus {
  OK
  EM_MANUTENCAO
  DESABILITADO
}

enum Role {
  MANAGER
  ADMIN
}

model Maintenance {
  id          String            @id @default(uuid())
  technician  String
  contact     String?
  description String
  createdAt   DateTime          @default(now())
  finishedAt  DateTime?
  status      MaintenanceStatus @default(ABERTA)

  equipmentId String
  equipment   Equipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)

  components MaintenanceComponent[]
}

enum MaintenanceStatus {
  ABERTA
  EM_ANDAMENTO
  TERMINADA
}

model MaintenanceComponent {
  maintenanceId String
  componentId   String

  maintenance Maintenance @relation(fields: [maintenanceId], references: [id])
  component   Component   @relation(fields: [componentId], references: [id])

  @@id([maintenanceId, componentId])
}
